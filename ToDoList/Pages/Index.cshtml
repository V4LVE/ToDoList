@page
@model ToDoList.Web.Pages.IndexModel
@{
ViewData["Title"] = "Login";
}

<div class="card" style="width: 300px; height: 400px; margin: auto">
    <div class="card-header text-center">
        <h3>Login</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="Login">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Type your username"/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Type your password" />
            </div>
            <p class="form-label" style="color:red;">@Model.StatusMessage</p>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <p>Don't have an account? <a href="/Register">Register</a></p>
    </div>
</div>
