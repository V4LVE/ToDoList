@page "{Guid:?}"
@using ToDoList.Repository.Enums;
@model ToDoList.Web.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron">
    <h1 class="display-4">Edit Task</h1>
    <hr />
    <form method="post" asp-page-handler="EditTask">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <div class="mb-3">
                        <input type="hidden" asp-for="@Model.EditItem.ID" value="@Model.EditItem.ID" />
                        <label asp-for="EditItem.Description" class="form-label"></label>
                        <input asp-for="EditItem.Description" class="form-control" />
                        <span asp-validation-for="EditItem.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div>
                        <label asp-for="EditItem.Priority" class="form-label"></label>
                        <select asp-for="EditItem.Priority" class="form-select">
                            @foreach (PriorityEnum priority in Enum.GetValues(typeof(PriorityEnum)))
                            {
                                <option value="@priority">@priority</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="mb-3">
                        <label asp-for="EditItem.DateCreated" class="form-label"></label>
                        <input asp-for="EditItem.DateCreated" class="form-control" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="EditItem.IsCompleted" class="form-label"></label>
                        <input asp-for="EditItem.IsCompleted" class="form-check" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <a asp-page="Index" class="btn btn-danger">Cancel</a>
</div>
